{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "#{", "close": "}" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "offSide": true
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*([a-zA-Z][a-zA-Z0-9]*|[.#][a-zA-Z0-9_-]+|if|else|unless|each|for|while|mixin|block|case|when|default).*$",
    "decreaseIndentPattern": "^\\s*(else|when|default)\\b"
  }
}
